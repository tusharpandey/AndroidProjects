<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@color/littleFlora_pink"
    android:weightSum="1" >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:layout_weight=".2">

        <ImageView
        	android:id="@+id/img_itemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/iclauncher" />
    </FrameLayout>

    <TextView
        android:id="@+id/txt_itemName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_vertical|left"
        android:layout_gravity="center_vertical"
        android:textColor="@color/selector_fortextview_white"
        android:layout_weight=".8"
        android:textSize="@dimen/overflow_textSize"
        android:text="itemName" />

</LinearLayout>