<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|bottom|left|right"
    android:layout_margin="18dp"
    android:orientation="vertical" >
    
	<TextView
	    android:id="@+id/txt_sharing_sharewith"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/littleFlora_pink"
	    android:textSize="20sp"
	    android:text="@string/followus_followus"
	    android:gravity="center_horizontal"
	    />
	
	<View
	    android:layout_width="match_parent"
	    android:layout_height="2px"
	    android:layout_marginTop="10dp"
	    android:background="@color/Gray"
	    />
	
	<TextView
	    android:paddingTop="4dp"
	    android:id="@+id/txt_sharing_sharewith_question1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/selector_fortextview_gray"
	    android:textSize="20sp"
	    android:layout_marginTop="10dp"
	    android:paddingLeft="10dp"
	    android:drawableLeft="@drawable/sharing_facebook"
	    android:drawablePadding="5dp"
	    android:text="@string/ProductsDescription_SharingwithFacebook"
	    />
	
	<TextView
	    android:paddingTop="4dp"
	    android:id="@+id/txt_sharing_sharewith_answer1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/selector_fortextview_gray"
	    android:textSize="20sp"
	    android:layout_marginTop="10dp"
	    android:paddingLeft="10dp"
	    android:drawableLeft="@drawable/sharing_facebook"
	    android:drawablePadding="5dp"
	    android:text="@string/ProductsDescription_SharingwithFacebook"
	    />
	
</LinearLayout>
